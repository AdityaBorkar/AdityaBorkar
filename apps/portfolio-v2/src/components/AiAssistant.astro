---
import RoundMessage from "@/assets/icons/RoundMessage.svg";
import Chat from "./chat";

const COOKIE_ACCEPTED = true;
---

<button
    transition:persist=""
    class:list={[
        "fixed z-50 bottom-5 right-5 px-3 shadow-md py-3 rounded-full border border-border/20 bg-bg-primary text-text-secondary select-none",
        "focus-visible:ring-2 focus-visible:ring-text-secondary hover:scale-110 focus-visible:scale-110",
        "md:bottom-8 md:right-8 md:px-6 md:z-50 md:hover:shadow-lg",
        !COOKIE_ACCEPTED && "!hidden",
    ]}
    onclick="document.getElementById('chat-dialog').showModal()"
>
    <RoundMessage class="inline-block size-5 -mt-1" />
    <span class="max-md:hidden font-semibold">Ask AI</span>
</button>

