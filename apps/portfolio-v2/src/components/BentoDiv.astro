---
import { cn } from '@/lib/utils';

interface Props {
	label?: string;
	className?: string;
}

const { label, className } = Astro.props;
---

<div
  class={cn(
    "rounded-3xl text-text-primary border border-bg-secondary bg-bg-primary/20 py-6 px-8 hover:shadow-bg-primary dark:bg-zinc-950",
    className,
  )}
>
  {
    label && (
      <div class="mb-4 text-xs font-semibold uppercase tracking-wider text-text-tertiary">
        {label}
      </div>
    )
  }
  <slot />
</div>
