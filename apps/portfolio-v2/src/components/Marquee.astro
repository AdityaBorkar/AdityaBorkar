---
import { cn } from '@/lib/utils'

interface Props {
  class?: string
  direction?: 'left' | 'right'
}

const { direction = 'left', class: className } = Astro.props
---

<div class={cn('marquee-container', className)}>
  <div class="marquee" data-direction={direction}>
    <slot />
  </div>
</div>

<style>
  .marquee-container {
    overflow: hidden;
    width: 100%;
  }
  .marquee {
    display: flex;
    animation: scroll 5s linear infinite;
  }
  .marquee[data-direction='right'] {
    animation-direction: reverse;
  }
  .marquee-item {
    flex: 0 0 auto;
    margin: 0 2rem;
  }
  .marquee-item img {
    height: 18rem;
    border: 1px solid var(--border-color);
  }
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.33%);
    }
  }
</style>
