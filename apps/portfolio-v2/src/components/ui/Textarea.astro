---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"textarea"> {
    label: string;
    class?: string;
    wrapperClass?: string;
    wrapper?: any;
}

const {
    label,
    class: className,
    wrapperClass,
    wrapper: Wrapper = "div",
    ...props
} = Astro.props;
---

<Wrapper class:list={[wrapperClass]}>
    <div class="flex items-center justify-between mb-1">
        <label for={props.name} class="font-medium text-text-primary">
            {label}
        </label>
        <p class="text-xs text-red-600 dark:text-red-400 pr-2"></p>
    </div>
    <textarea
        id={props.name}
        spellcheck="false"
        {...props}
        class:list={[
            "w-full bg-bg-primary rounded-lg border border-border/20 px-3 py-2 text-sm text-text-primary",
            "placeholder:select-none placeholder:text-text-tertiary/60",
            "invalid:border-red-400 dark:invalid:border-red-900",
            "focus:ring focus:ring-border focus:bg-bg-secondary",
            "transition-all duration-300",
            className,
        ]}></textarea>
    <!-- class="peer block  w-full  bg-bg-primary px-4 py-2 border border-border/20 placeholder:text-text-tertiary/60 group-hover:pb-24" -->
</Wrapper>
