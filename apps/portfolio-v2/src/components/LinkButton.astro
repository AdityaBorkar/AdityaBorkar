---
import { cn } from "@/lib/utils";
import { cva } from "class-variance-authority";
import ArrowUpRightIcon from "@/assets/icons/ArrowUpRight.svg";

const variants = cva("group mx-auto block w-fit rounded-full font-semibold", {
  variants: {
    type: {
      primary:
        "rounded-2xl border border-black bg-neutral-800 px-8 py-4 text-lg text-neutral-200 shadow-lg",
      secondary:
        "bg-bg-secondary px-3 px-6 text-text-secondary hover:text-foreground",
    },
  },
  defaultVariants: {
    type: "primary",
  },
});

interface Props {
  type?: "primary" | "secondary";
  href: string;
  openInNewTab?: boolean;
  className?: string;
}

const { type = "primary", href, openInNewTab = false, className } = Astro.props;
---

<a
  href={href}
  target={openInNewTab ? "_blank" : "_self"}
  class={cn(variants({ type }), className)}
>
  <slot />
  <ArrowUpRightIcon
    class="-mt-1 ml-2 inline w-0 stroke-1 text-neutral-700 group-hover:w-fit"
  />
</a>
