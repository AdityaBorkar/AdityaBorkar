---
import { cn } from "@/lib/utils";

interface Props {
    href: string;
    className?: string;
}

const { href, className } = Astro.props;
---

<a
    href={href}
    target="_blank"
    rel="noreferrer"
    class={cn(
        "relative block w-full rounded-md bg-bg-primary px-4 py-3 font-medium text-text-primary",
        className,
    )}
>
    <slot />
</a>
