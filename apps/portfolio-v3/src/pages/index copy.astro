  <!-- Frontend Development -->
  <!--  -->
  <!--  -->
  <!-- UI / UX Design -->
  <!-- Team Engineering -->
  <!-- Technical Consultancy -->
  <!-- Product Engineering -->
  <section>
    <div class="grid grid-cols-3 gap-8">
      <ServiceCard image={LaptopWithNotesImage}>
        Full Cycle <br />
        Development
      </ServiceCard>
      <ServiceCard image={LaptopWithNotesImage}>
        Prototype & <br />
        MVP Development
      </ServiceCard>
      <ServiceCard image={LaptopWithNotesImage}>
        Technical <br />
        Consultancy
      </ServiceCard>
      <ServiceCard image={LaptopWithNotesImage}>
        AI / Automation <br />
        Development
      </ServiceCard>
      <ServiceCard image={LaptopWithNotesImage}>
        Backend <br />
        Development
      </ServiceCard>
      <ServiceCard image={LaptopWithNotesImage}>
        Frontend <br />
        Development
      </ServiceCard>
    </div>

    <div class="mt-12 text-base text-text-secondary">
      Write down some notes about the process to achieve each of the service for
      SEO reasons.
      <a href="/services/" class="text-foreground"> /services </a>
    </div>
  </section>

  <!-- Cross-Discipline Expertise
  Tech Agnostic
  Quality Assured
  AI Engineer [SPECIALIZED]
  Cross-Discipline Expertise
  Tech Agnostic
  Scalable Solutions -->

  <Heading icon={LuAtom} label="Projects"> Our Selected Works </Heading>
  <section class="grid w-full grid-cols-2 gap-8">
    {
      Projects.map((project) => (
        <a
          href="/projects/"
          class="rounded-2xl border border-border/20 bg-white px-8 py-6"
        >
          <div class="text-xl font-semibold text-text-primary">
            {project.title}
          </div>
          <p class="mt-2 text-sm font-medium text-text-secondary">
            {project.description}
          </p>
          <Image
            src={LaptopAbstractImage}
            alt=""
            class="mx-auto mt-4 block h-72 w-auto object-cover"
          />
        </a>
      ))
    }
  </section>
  <a
    href="/projects/"
    class="mx-auto mt-16 block w-fit rounded-full border-2 border-foreground px-8 py-4 text-base font-semibold text-foreground transition-colors duration-300 hover:bg-foreground hover:text-background"
  >
    View All Projects
  </a>

  <Heading icon={LuFileText} label="Blog"> Featured Writings </Heading>
  <section class="flex flex-row justify-center gap-8 overflow-auto">
    {
      BlogPosts.map((blog) => (
        <a
          href="/blog/"
          class="w-[36rem] rounded-2xl border border-border/20 bg-white px-6 py-4 text-text-secondary"
        >
          <Image
            src={LaptopAbstractImage}
            alt=""
            class="mx-auto my-2 block h-36 w-auto object-cover"
          />
          <p class="mt-6 text-base font-medium text-text-primary">
            {blog.title}
          </p>
        </a>
      ))
    }
  </section>
  <a
    href="/projects/"
    class="mx-auto mt-16 block w-fit rounded-full border-2 border-foreground px-8 py-4 text-base font-semibold text-foreground transition-colors duration-300 hover:bg-foreground hover:text-background"
  >
    View All Posts
  </a>

  <Heading icon={LuUserCircle} label="Testimonials">
    What People Speak
  </Heading>
  <section class="flex flex-row flex-wrap items-center justify-evenly gap-8">
    {
      TESTIMONIALS.map((testimonial) => (
        <div class="group h-fit flex-[1_0_30%] rounded-2xl border border-border/20 bg-white px-6 py-4 dark:bg-black">
          <div class="flex flex-row items-center justify-between">
            <div class="w-fit bg-gradient-to-tr from-yellow-500 to-orange-500 bg-clip-text text-xl tracking-tighter text-transparent">
              ★★★★★
            </div>
            {testimonial.project && (
              <a
                href={testimonial.project.url}
                class="w-fit rounded-full border border-border/20 px-2 py-1 text-xs font-medium text-text-tertiary hover:bg-background"
              >
                Project: {testimonial.project.label}
                <HiArrowUpRight className="size-3 ml-0.5 -mt-0.5 inline-block" />
              </a>
            )}
          </div>

          <p class="my-4 text-pretty text-sm">{testimonial.text}</p>

          <div>
            <div class="font-medium">{testimonial.author}</div>
            <div class="text-text-secondary">{testimonial.role}</div>
          </div>
        </div>
      ))
    }
  </section>

  <BookCallFooter />
</LandingLayout>
